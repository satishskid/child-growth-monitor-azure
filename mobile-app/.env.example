# Mobile App Environment Configuration
# Copy this file to .env and update with your actual values

# API Configuration
API_BASE_URL=http://localhost:5000/api
ML_SERVICE_URL=http://localhost:8001
API_TIMEOUT=30000

# Azure B2C Configuration
AZURE_B2C_TENANT_NAME=cgmb2c
AZURE_B2C_CLIENT_ID=your-client-id
AZURE_B2C_POLICY_SIGNUP_SIGNIN=B2C_1_signup_signin
AZURE_B2C_POLICY_EDIT_PROFILE=B2C_1_edit_profile
AZURE_B2C_POLICY_RESET_PASSWORD=B2C_1_password_reset
AZURE_B2C_REDIRECT_URI=msauth://com.childgrowthmonitor.app

# Camera Configuration
CAMERA_QUALITY=high
VIDEO_RECORDING_QUALITY=720p
MAX_RECORDING_DURATION=30
AUTO_FOCUS_ENABLED=true
FLASH_MODE=auto

# Scanning Configuration
SCAN_ANGLES_REQUIRED=4  # front, side, back, top
SCAN_DURATION_PER_ANGLE=5
POSE_DETECTION_CONFIDENCE=0.8
QUALITY_CHECK_ENABLED=true

# Data Storage Configuration
OFFLINE_STORAGE_ENABLED=true
MAX_OFFLINE_SCANS=50
AUTO_SYNC_ENABLED=true
SYNC_ON_WIFI_ONLY=true

# Privacy Configuration
DATA_RETENTION_DAYS=30
AUTO_DELETE_ENABLED=true
ENCRYPTION_ENABLED=true
BIOMETRIC_AUTH_ENABLED=true

# UI Configuration
THEME=auto  # light, dark, auto
LANGUAGE=en  # en, es, fr, ar, sw, pt
ACCESSIBILITY_ENABLED=true
FONT_SIZE=medium

# Analytics Configuration
ANALYTICS_ENABLED=true
CRASH_REPORTING_ENABLED=true
PERFORMANCE_MONITORING=true
USER_FEEDBACK_ENABLED=true

# Development Configuration
DEBUG_MODE=false
MOCK_API_RESPONSES=false
DEMO_MODE=false
DEV_MENU_ENABLED=false

# Feature Flags
ENABLE_3D_SCANNING=true
ENABLE_OFFLINE_MODE=true
ENABLE_ANALYTICS=false

# Push Notifications
PUSH_NOTIFICATIONS_ENABLED=true
NOTIFICATION_SOUND=default
BADGE_COUNT_ENABLED=true

# Location Services
LOCATION_SERVICES_ENABLED=true
LOCATION_ACCURACY=high
BACKGROUND_LOCATION=false

# Consent Management
CONSENT_VERSION=1.0
PRIVACY_POLICY_URL=https://childgrowthmonitor.org/privacy
TERMS_OF_SERVICE_URL=https://childgrowthmonitor.org/terms

# Performance
IMAGE_CACHE_SIZE_MB=100
VIDEO_CACHE_SIZE_MB=500
MEMORY_CACHE_SIZE_MB=50
